{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "rootDir": "./",
        "outDir": "../dist"
    },
    "tsc-alias": {
        "resolveFullPaths": true
    },
    "include": ["."]
}